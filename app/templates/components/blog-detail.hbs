<h1>{{blog.title}}</h1>

<div class="row">
  <img src={{blog.image}} alt={{blog.title}}/>
</div>
<div class="row">
  <p>{{blog.author}} | {{blog.date}}</p>
</div>
<div class="row">
  <p>
    {{{blog.post}}}
  </p>
</div>
<div class="row">
  <h2> Reviews </h2>
  <div class="row">
    {{#each blog.comments as |comment|}}
    {{comment-tile comment=comment}}
    {{/each}}
  </div>
</div>
