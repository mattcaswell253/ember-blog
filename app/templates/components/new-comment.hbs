{{#if addComment}}
<h1>New Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="userName">Username</label>
        {{input value=userName id="userName"}}
      </div>
      <div class="form-group">
        <label for="body">Comment</label>
        {{input value=body id="body"}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date"}}
      </div>
      <button {{action 'saveComment'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'showComment'}}>Comment</button>
{{/if}}
