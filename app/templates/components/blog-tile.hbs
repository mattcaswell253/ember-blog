<div class="row">
  {{#link-to 'blog' blog.id}}
  <div class="col-md-8" id="blogs">
    <div class="row">
      <h1 class="title">{{blog.title}}</h1>
      <img src={{blog.image}}>
      <div class="row">
        By: {{blog.author}} | {{blog.date}}
      </div>
    </div>
  </div>
  {{/link-to}}
  <div class="col-md-4" id="archives">
  </div>

</div>
